
<div class="hero-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0)), url('<%= cl_image_path @cocktail.photo.key %>')">
  <div class="hero-text">
    <h1><%= @cocktail.name %></h1>
    <p id="notice"><%= notice %></p>
    <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail.id) %>
  </div>
</div>

<div class ="container">

<h2>Ingredients</h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to 'delete', dose_path(dose.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to 'Back', cocktails_path %>

</div>
